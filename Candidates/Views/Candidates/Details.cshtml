@model Candidates.Models.Lists

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Candidate</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Candidate.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Candidate.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Candidate.DateOfBirth)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Candidate.DateOfBirth)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Candidate.Number)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Candidate.Number)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Candidate.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Candidate.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.HasSkills)
        </dt>
